<Window
    x:Class="ProyectoFinCurso.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Proyecto Fin de Curso"
    MinWidth="800"
    MinHeight="450"
    WindowState="Maximized">
    <Grid>
        <DockPanel>
            <!--  Menú lateral con botones  -->
            <StackPanel
                Width="200"
                Background="LightGray"
                DockPanel.Dock="Left">
                <Button
                    Margin="10"
                    Click="Imagenes_Click"
                    Content="Imágenes" />
                <Button
                    Margin="10"
                    Click="Calculadora_Click"
                    Content="Calculadora" />
            </StackPanel>

            <!--  Área donde se cargarán las páginas  -->
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        </DockPanel>
    </Grid>
</Window>
